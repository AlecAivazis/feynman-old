# feynman virtual host definition file

<VirtualHost *:80>
    ServerName feynman.orthologue.com
    ServerAdmin root

    # make sure there is a usable locale
    SetEnv LANG en_US.UTF-8
    # and a python path
    SetEnv PYTHONPATH /home/projects/feynman/live/packages

    # application support
    WSGIScriptAlias / /home/projects/feynman/live/web/apache/feynman.wsgi
    # permissions
    <Location "/">
        Options Indexes FollowSymLinks MultiViews
        Require all granted
    </Location>

    # what to log; possible values include:
    #    debug, info, notice, warn, error, crit, alert, emerg
    LogLevel warn

    # the log files
    ErrorLog /var/log/apache2/error-feynman.log
    CustomLog /var/log/apache2/access-feynman.log combined

</VirtualHost>

# end of file
