body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  width: 900px

a
  color: #00B7FF

#canvas
  height: 390px
  width: 540px
  margin: 20px
  margin-right: none

svg
  float: left

#sidebar
  float: right
  text-align: center
  width: 260px
  text-align: right

#undoHistory
  border: 1px solid black
  border-radius: 4px
  padding: 20px

.propertiesMenu
  border: 1px solid black
  border-radius: 4px
  padding: 20px

.propertiesMenu .headerRow th
  padding-bottom: 15px
  img
    vertical-align: middle

.property
  margin: 5px 0px
  padding: 0px 20px

.property .label 
  text-align: right
  vertical-align: top
  padding-right: 5px

.property .value
  text-align: left

.property .input
  text-align: left
  
.colorpicker
  background: white
  border: 1px solid black
  border-radius: 2px

.fixed 
  fill: blue 

.selectedElement
  stroke: red

circle.selectedElement
  fill: red

.gridLine
  stroke: rgb(219, 219, 219)
  strokeWidth: 2

.historyTitle
  text-align: left
  padding-bottom: 5px
