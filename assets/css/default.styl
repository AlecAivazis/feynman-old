@import mixins

body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  width: 900px

a
  color: #00B7FF

#canvas
  height: 390px
  width: 540px
  margin: 20px
  margin-right: none
  overflow: hidden

svg
  float: left

#sidebar
  float: right
  text-align: center
  width: 260px
  text-align: right

#undoHistory
  border: 1px solid black
  border-radius: 4px
  padding: 20px
  
  table tbody
    display: block
    max-height: 100px
    overflow: auto

.propertiesMenu
  border: 1px solid black
  border-radius: 4px
  padding: 20px

.propertiesMenu .headerRow th
  padding-bottom: 15px
  img
    vertical-align: middle

.property
  margin: 5px 0px
  padding: 0px 20px

.property .label 
  text-align: right
  vertical-align: top
  padding-right: 5px

.property .value
  text-align: left

.property .input
  text-align: left
  
.colorpicker
  background: white
  border: 1px solid black
  border-radius: 2px

.fixed 
  fill: blue 

.selectedElement
  stroke: red

circle.selectedElement
  fill: red

.gridLine
  stroke: rgb(219, 219, 219)
  strokeWidth: 2

.historyTitle
  text-align: left
  padding-bottom: 5px

.historyItem
  color: black
  vertical-align: top
  cursor: pointer

  .id
    width: 10%
  .title
    width: 90%
    text-align: left
  
  &.current
    color: red
  &.disabled
    color: #B5B5B5

 
.tool
  padding-top: 5px
  text-align: center

  .button
    margin-left: 5px
    button(none, none)

.lineDecoration
  fill: black

#mainContent
  float: left

#footer 
  clear: both
