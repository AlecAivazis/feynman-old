#overlayGutter
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 999
  height: 100%
  display: table
  text-align: center
  background: rgba(69, 69, 69, 0.5)

#overlay
  position: relative
  display: table-cell
  vertical-align: middle

#overlayContent
  color: black
  background: white
  text-align: left
  -moz-border-radius: 10px
  border-radius: 10px
  display: inline-block
  -moz-box-shadow: 0px 0px 4px #9b9b9b
  -webkit-box-shadow: 0px 0px 4px #9b9b9b
  box-shadow: 0px 0px 4px #9b9b9b
