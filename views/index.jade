extends base

append js

  script(type="text/javascript" src="/thirdparty/snap.svg/dist/snap.svg.js")
  script(type="text/javascript" 
         src="/thirdparty/angular-bootstrap-colorpicker/js/bootstrap-colorpicker-module.js")

  != js('Anchor')
  != js('Line')

  != js('feynman')

append css
  link(href="/thirdparty/angular-bootstrap-colorpicker/css/colorpicker.css" rel="stylesheet")

block content
  body(ng-app="feynman")
    h1 #{title}!

    svg#canvas

    table#propertiesMenu(ng-controller="elementProperties" ng-show="selectedLine")
      tr.headerRow
        th(colspan=2)
          | Properties for 
          img(src="http://latex.codecogs.com/svg.latex?{{selectedLine.label}}", 
            ng-show="selectedLine.label")
      tr.property
        td.label
          | label:
        td.value
          input(type="text" ng-model="selectedLine.label" name="label")
      tr.property
        td.label
          | label position:
        td.value
          input(type="radio" ng-model="selectedLine.labelPosition" value="top")
          |  top
          br
          input(type="radio" ng-model="selectedLine.labelPosition" value="bottom")
          |  bottom
      tr.property
        td.label
          | color:
        td.value
          input(colorpicker="rgb" type="text" ng-model="stroke" name="color"
            style="background: {{stroke}}; color: {{stroke}}; border: 1px solid {{stroke}};")
      tr.property
        td.label
          | line style:
        td.value
          select(ng-model="selectedLine.style")
            option(value = 'line')
              | line
            option(value = 'gluon')
              | gluon
            option(value = 'em')
              | em
            
            
