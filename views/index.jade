extends base

append js

  script(type="text/javascript" src="/thirdparty/snap.svg/dist/snap.svg.js")
  script(type="text/javascript" 
         src="/thirdparty/angular-bootstrap-colorpicker/js/bootstrap-colorpicker-module.js")
  script(type="text/javascript" src="/thirdparty/angular-slider/angular-slider.js")

  != js('Anchor')
  != js('Line')

  != js('feynman')

append css
  link(href="/thirdparty/angular-bootstrap-colorpicker/css/colorpicker.css" rel="stylesheet")
  != css('slider')

block content
  body(ng-app="feynman")
    h1 #{title}!

    svg#canvas

    table#propertiesMenu(ng-controller="elementProperties" ng-show="selectedLine  != undefined")
      tr.headerRow
        th(colspan=2)
          | Properties for 
          img(src="http://latex.codecogs.com/svg.latex?{{selectedLine.label}}", 
            ng-show="selectedLine.label")
      tr.property
        td.label
          | label:
        td.value
          input(type="text" ng-model="selectedLine.label" name="label")
      tr.property
        td.label
          | label position:
        td.value
          input(type="radio" ng-model="selectedLine.labelPosition" value="top")
          |  top
          br
          input(type="radio" ng-model="selectedLine.labelPosition" value="bottom")
          |  bottom
      tr.property
        td.label
          | color:
        td.value
          input(colorpicker="rgb" type="text" ng-model="stroke" name="color"
            style="background: {{stroke}}; color: {{stroke}}; border: 1px solid {{stroke}};")
      tr.property
        td.label
          | stroke width:
        td.value
          | {{selectedLine.width}}
          slider(floor="1.0" ceiling="10" step=".2" precision="1"  ng-model="width" 
                 style="width: 70%")
      tr.property
        td.label
          | line style:
        td.value
          select(ng-model="selectedLine.style")
            option(value = 'line')
              | line
            option(value = 'gluon')
              | gluon
            option(value = 'em')
              | em
      tr.property(ng-show="selectedLine.style == 'gluon'")
        td.label
          | loop direction:
        td.value
          select(ng-model="selectedLine.loopDirection")
            option(value="1")
              | up
            option(value="-1")
              | down
        
            
