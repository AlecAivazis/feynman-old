extends base

append js

  script(type="text/javascript" src="/thirdparty/snap.svg/dist/snap.svg.js")

  script(type="text/javascript" 
         src="/thirdparty/angular-bootstrap-colorpicker/js/bootstrap-colorpicker-module.js")

  != js('Anchor')
  != js('Line')

  != js('feynman')

append css
  link(href="/thirdparty/angular-bootstrap-colorpicker/css/colorpicker.css" rel="stylesheet")

block content
  body(ng-app="feynman")
    h1 #{title}!

    #propertiesMenu(ng-controller="elementProperties" ng-show="selectedLine")
      .property
        label(for="label")
          | label:
        input(type="text" ng-model="label" name="label")
      .property
        label(for="stroke")
          | color: 
        input(colorpicker="rgb" type="text" ng-model="stroke" name="stroke"
              style="background: {{stroke}}; color: {{stroke}}; border: none;")

